package {	import flash.display.StageScaleMode;	import flash.display.StageAlign;	import flash.display.Sprite;	import flash.events.Event;		public class Reaching extends Sprite {		private var segment0:Segment;		private var segment1:Segment;				public function Reaching():void {			init();		}				private function init():void {			segment0 = new Segment(100,20);			addChild(segment0);			segment1 = new Segment(100,20);			segment1.x = stage.stageWidth/2;			segment1.y = stage.stageHeight/2;			addChild(segment1);			stage.addEventListener(Event.ENTER_FRAME, onStart);		}				private function onStart(evt:Event):void {			var dx:Number = mouseX - segment0.x;			var dy:Number = mouseY - segment0.y;			var angle:Number = Math.atan2(dy, dx);			segment0.rotation = angle * 180 / Math.PI;						var segW:Number = segment0.getPivot().x - segment0.x;			var segH:Number = segment0.getPivot().y - segment0.y;						var tx:Number = mouseX - segW;			var ty:Number = mouseY - segH;						dx = tx - segment1.x;			dy = ty - segment1.y;			angle = Math.atan2(dy,dx);			segment1.rotation = angle * 180 / Math.PI;			segment0.x = segment1.getPivot().x;			segment0.y = segment1.getPivot().y;		}	}}