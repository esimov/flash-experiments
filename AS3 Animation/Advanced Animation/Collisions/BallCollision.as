package {	import flash.events.Event;	import flash.display.Sprite;	import flash.display.StageScaleMode;	import flash.display.StageAlign;		public class BallCollision extends Sprite {		private var ball1:Ball;		private var ball2:Ball;		private var friction:Number = 0.8;				public function BallCollision():void {			init();		}				private function init():void {			ball1 = new Ball(30);			ball1.mass = 2;			ball1.x = 40;			ball1.y = stage.stageHeight/2;			ball1.vx = 10;			addChild(ball1);						ball2 = new Ball(40);			ball2.mass = 4;			ball2.x = stage.stageWidth - 40;			ball2.y = stage.stageHeight/2;			ball2.vx = -10;			addChild(ball2);			addEventListener(Event.ENTER_FRAME, onStart);		}				private function onStart(evt:Event):void {			ball1.x += ball1.vx;			ball2.x += ball2.vx;			var dist:Number = ball2.x - ball1.x;			if (dist < ball2.radius + ball1.radius) {				ball1.vx *= friction;				ball2.vx *= friction;				/*var vxTotal:Number = ball1.vx - ball2.vx;				ball1.vx = ((ball1.mass - ball2.mass) * ball1.vx + 2 * ball2.mass * ball2.vx) / (ball1.mass + ball2.mass);				ball2.vx = vxTotal + ball1.vx										*/				ball1.x += ball1.vx;				ball2.x += ball2.vx;			}		}	}}