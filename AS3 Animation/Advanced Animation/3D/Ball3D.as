package {	import flash.display.Sprite;	import flash.display.GradientType;	import flash.geom.Matrix;		public class Ball3D extends Sprite {		public var radius:Number;		private var color:uint;		public var xPos:Number = 0;		public var yPos:Number = 0;		public var zPos:Number = 0;		public var vx:Number = 0;		public var vy:Number = 0;		public var vz:Number = 0;		public var mass:Number = 1;				private var colorMatrix:Matrix = new Matrix();				public function Ball3D(radius:Number=40, color:uint=0x540000) {			this.radius = radius;			this.color = color;			init();		}		public function init():void {			colorMatrix.createGradientBox(70,70, 0, -20, -20);			//graphics.lineStyle(1);			graphics.beginGradientFill(GradientType.RADIAL, [0xFF0000,0x330000], [1,1], [0,0xFF], colorMatrix);			graphics.drawCircle(0, 0, radius);			graphics.endFill();		}	}}