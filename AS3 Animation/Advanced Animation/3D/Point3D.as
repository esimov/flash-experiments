package {	public class Point3D {		private var focalLength:Number = 250;		private var vpX:Number = 0;		private var vpY:Number = 0;		public var xpos:Number = 0;		public var ypos:Number = 0;		public var zpos:Number = 0;		private var centerX:Number = 0;		private var centerY:Number = 0;		private var centerZ:Number = 0;				public function Point3D(xpos:Number = 0, ypos:Number = 0, zpos:Number = 0):void {			this.xpos = xpos;			this.ypos = ypos;			this.zpos = zpos;		}				public function setVanishingPoint(vpX:Number, vpY:Number):void {			this.vpX = vpX;			this.vpY = vpY;		}				public function setCenter(centerX:Number, centerY:Number, centerZ:Number):void {			this.centerX = centerX;			this.centerY = centerY;			this.centerZ = centerZ;		}				public function get screenX():Number {			var scalex:Number = focalLength / (focalLength + zpos + centerZ);			return vpX + (xpos + centerX) * scalex;		}				public function get screenY():Number {			var scaley:Number = focalLength / (focalLength + zpos + centerZ);			return vpY + (ypos + centerY) * scaley;		}						public function rotateX(angleX:Number):void {			var cosX:Number = Math.cos(angleX);			var sinX:Number = Math.sin(angleX);						var y1:Number = cosX * ypos - sinX * zpos;			var z1:Number = cosX * zpos + sinX * ypos;						zpos = z1;			ypos = y1;		}				public function rotateY(angleY:Number):void {			var cosY:Number = Math.cos(angleY);			var sinY:Number = Math.sin(angleY);						var x1:Number = cosY * xpos - sinY * zpos;			var z1:Number = cosY * zpos + sinY * xpos;						zpos = z1;			xpos = x1;		}				public function rotateZ(angleZ:Number):void {			var cosZ:Number = Math.cos(angleZ);			var sinZ:Number = Math.sin(angleZ);						var x1:Number = cosZ * xpos - sinZ * ypos;			var y1:Number = cosZ * ypos + sinZ * xpos;						ypos = y1;			xpos = x1;		}	}}