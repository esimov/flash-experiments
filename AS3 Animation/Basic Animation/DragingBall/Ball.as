package {	import flash.display.Sprite;	import flash.display.GradientType;	import flash.geom.Matrix;		public class Ball extends Sprite {		public var radius:Number;		private var color1:uint;		private var color2:uint;		private var numberY:Number;		private var numberX:Number;		private var colorMatrix:Array;		private var alfa:Array;		private var ratio:Array;		private var mtrx:Matrix = new Matrix();				public function Ball(radius:Number=40, color1:uint=0xff0000, color2:uint = 0xffffff) {			this.radius = radius;			this.color1 = color1;			this.color2 = color2;			init();		}		public function init():void {			colorMatrix = [color1, color2];			alfa = [1,0.7];			ratio = [0, 255];			mtrx.createGradientBox(radius, radius, Math.PI /2, 0, 0);			graphics.beginGradientFill(GradientType.RADIAL, colorMatrix, alfa, ratio, mtrx);			graphics.drawCircle(0, 0, radius);			graphics.endFill();		}				public function set vx(numberX:Number):void {			this.numberX = numberX;		}				public function set vy(numberY:Number):void {			this.numberY = numberY;		}				public function get vx():Number {			return numberX;		}				public function get vy():Number {			return numberY;		}	}}