package {	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.Sprite;	import flash.geom.Rectangle;		public class EaseToMouse extends Sprite {		private var targetX:Number;		private var targetY:Number;		private var ball:Ball = new Ball();		var rectangle:Rectangle = new Rectangle(0 + ball.radius, 0 + ball.radius, 												stage.stageWidth - ball.radius*2, 												stage.stageHeight - ball.radius*2);		private var friction:Number = 0.1;				public function EaseToMouse():void {			init();		}			private function init():void {			ball.x = Math.random() * stage.stageWidth;			ball.y = Math.random() * stage.stageHeight;			addChild(ball);			addEventListener(Event.ENTER_FRAME, startEvent);		}					private function startEvent(evt:Event):void {			ball.vx = (mouseX - ball.x) * friction;			ball.vy = (mouseY - ball.y) * friction;			ball.x += ball.vx;			ball.y += ball.vy;		}	}}