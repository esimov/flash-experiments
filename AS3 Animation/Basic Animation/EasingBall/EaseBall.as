package {	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.Sprite;	import flash.geom.Rectangle;		public class EaseBall extends Sprite {		private var targetX:Number;		private var targetY:Number;		private var ball:Ball = new Ball();		var rectangle:Rectangle = new Rectangle(0 + ball.radius, 0 + ball.radius, 												stage.stageWidth - ball.radius*2, 												stage.stageHeight - ball.radius*2);		private var friction:Number = 0.1;				public function EaseBall():void {			init();		}			private function init():void {			ball.x = Math.random() * stage.stageWidth;			ball.y = Math.random() * stage.stageHeight;			targetX = stage.stageWidth * 0.5;			targetY = stage.stageHeight * 0.5;			addChild(ball);			addEventListener(Event.ENTER_FRAME, startEvent);			ball.addEventListener(MouseEvent.MOUSE_DOWN, onDown);		}				private function onDown (evt:MouseEvent):void {			removeEventListener(Event.ENTER_FRAME, startEvent);			ball.startDrag(false, rectangle);			addEventListener(MouseEvent.MOUSE_UP, onUp);		}				private function onUp(evt:MouseEvent):void {			addEventListener(Event.ENTER_FRAME, startEvent);			ball.stopDrag();			removeEventListener(MouseEvent.MOUSE_UP, onUp);		}					private function startEvent(evt:Event):void {			ball.vx = (targetX - ball.x) * friction;			ball.vy = (targetY - ball.y) * friction;			ball.x += ball.vx;			ball.x += ball.vy;		}	}}