package {	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.Sprite;		public class ChainBalls1 extends Sprite {				private var ballNumber:Number = 7;		private var bin:Array;		private var ball:Ball1;		private var friction:Number = 0.7;		private var spring:Number = 0.15;		private var gravity:Number = 7;				public function ChainBalls1():void {			init();		}				private function init():void {			bin = new Array();			for (var i:uint = 0; i<ballNumber; i++) {				ball = new Ball1(25);				bin.push(ball);				addChild(ball);			}						addEventListener(Event.ENTER_FRAME, onStartFrame);		}				private function moveBall(ball:Ball1, targetX:Number, targetY:Number){			var dx:Number = (targetX - ball.x) * spring;			var dy:Number = (targetY - ball.y) * spring;			ball.vx +=dx;			ball.vy +=dy;			ball.vy +=gravity;			ball.vx *=friction;			ball.vy *=friction;			ball.x += ball.vx;			ball.y += ball.vy;		}				private function onStartFrame(evt:Event):void {			graphics.clear();			graphics.lineStyle(1);			graphics.moveTo(mouseX, mouseY);			moveBall(bin[0], mouseX, mouseY);			graphics.lineTo(bin[0].x, bin[0].y);									for (var i:uint = 1; i<bin.length; i++) {				var ballA:Ball1 = Ball1(bin[i-1]);				var ballB:Ball1 = Ball1(bin[i]);				moveBall(ballB, ballA.x, ballA.y);				graphics.lineTo(ballB.x, ballB.y);			}		}	}}