package {	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.Sprite;	import flash.geom.Rectangle;		public class SpringingBall extends Sprite {		private var targetX:Number;		private var targetY:Number;		private var friction:Number = 0.95;		private var spring:Number = 0.05;		private var gravity:Number = 5;		private var ball:Ball = new Ball(20);		var rectangle:Rectangle = new Rectangle(0 + ball.radius, 0 + ball.radius, 												stage.stageWidth - ball.radius*2, 												stage.stageHeight - ball.radius*2);				public function SpringingBall():void {			init();		}			private function init():void {			ball.vx = 10;			ball.vy = 10;			ball.x = Math.random() * stage.stageWidth;			ball.y = stage.stageHeight * 0.5;			addChild(ball);			ball.cacheAsBitmap = true;			addEventListener(Event.ENTER_FRAME, startEvent);					}					private function startEvent(evt:Event):void {			targetX = mouseX;			targetY = mouseY;			var dx = (targetX - ball.x) * spring;			var dy = (targetY - ball.y) * spring;			ball.vx += dx;			ball.vy += dy;			ball.vy += gravity;			ball.vx *= friction;			ball.vy *= friction;			ball.x += ball.vx;			ball.y += ball.vy;					}	}}