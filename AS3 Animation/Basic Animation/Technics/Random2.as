package {	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	public class Random2 extends Sprite	{		private var numDots:uint = 300;		private var dots:Array;		private var dots2:Array;		private var vx:Number = 0;		private var vy:Number = 0;		private var friction:Number = 0.8;				public function Random2()		{			init();		}				private function init():void		{			stage.align = StageAlign.TOP_LEFT;			stage.scaleMode = StageScaleMode.NO_SCALE;			dots = new Array();			dots2 = new Array();			for(var i:uint = 0; i < numDots; i++)			{				var dot:Ball = new Ball(2, 0);				dot.x = stage.stageWidth / 2 + Math.random() * 100 - 50;				dot.y = stage.stageHeight / 2 + Math.random() * 100 - 50;				addChild(dot);				dots.push(dot);			}						for (i = 0; i< numDots; i++) {				dot.x = Math.random() * stage.stageWidth;				dot.y = Math.random() * stage.stageHeight;				dots2.push(dot);			}						stage.addEventListener(MouseEvent.CLICK, mouseClick);					}				private function mouseClick(evt:MouseEvent):void {			addEventListener(Event.ENTER_FRAME, onStart);					}				private function onStart(evt:Event):void {			for (var i:uint = 0; i< dots.length; i++) {				var dot1:Ball = dots[i];				var dot2:Ball = dots2[i];				moveParticle(dot1, dot2);			}		}				private function moveParticle(dot1:Ball, dot2:Ball):void {			var dx:Number = dot1.x - dot2.x;			var dy:Number = dot1.y - dot2.y;			var angle:Number = Math.atan2(dy, dx);			var targetX:Number = dot2.x + Math.cos(angle);			var targetY:Number = dot2.y + Math.sin(angle);			vx += (targetX - dot2.x) * friction;			vy += (targetY - dot2.y) * friction;			vx *= 0.5;			vy *= 0.6;			dot1.x += vx;			dot1.y += vy;		}	}}