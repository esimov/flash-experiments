package {	import flash.display.Sprite;		public class Ball extends Sprite {		public var radius:Number;		private var color:uint;		private var numberY:Number;		private var numberX:Number;				public function Ball(radius:Number=40, color:uint=0xff0000) {			this.radius = radius;			this.color = color;			init();		}		public function init():void {			graphics.beginFill(color);			graphics.drawCircle(0, 0, radius);			graphics.endFill();		}				public function set vx(numberX:Number):void {			this.numberX = numberX;		}				public function set vy(numberY:Number):void {			this.numberY = numberY;		}				public function get vx():Number {			return numberX;		}				public function get vy():Number {			return numberY;		}	}}