package {	import flash.display.Sprite;	import flash.events.Event;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;		public class Acceleration extends Sprite {		private var ball:Ball;		private var vx:Number = 0;		private var vy:Number = 0;		private var ax:Number = 0		private var ay:Number = 0;		private var gravity:Number = .02;				public function Acceleration ():void {			init();		}		private function init():void {			ball = new Ball(20, 0x2244ff);			addChild(ball);			ball.x = 50;			ball.y = 100;			addEventListener(Event.ENTER_FRAME, onEnterFrame);			stage.addEventListener(KeyboardEvent.KEY_DOWN, onKeyDwn);			stage.addEventListener(KeyboardEvent.KEY_UP, onKeyUps);		}				private function onKeyDwn (evt:KeyboardEvent):void {			switch (evt.keyCode) {				case Keyboard.RIGHT:				ax = .2;				break;				case Keyboard.LEFT:				ax = -.2;				break;				case Keyboard.DOWN:				ay = .2;				break;				case Keyboard.UP:				ay = -.2;				break;								default:			}					}				private function onKeyUps (evt:KeyboardEvent):void {			ax = 0;			ay = 0;		}		private function onEnterFrame(evt:Event):void {			vx +=ax;			vy +=ay;			vy +=gravity;			ball.x += vx;			ball.y +=vy;		}	}}